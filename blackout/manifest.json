{
    "name"             : "Blackout",
    "description"      : "Hide contents of current page without leaving",
    "manifest_version" : 2,
    "background"       : 
    {
        "scripts" : ["background.js"]
    },
    "permissions"      : ["storage", "tabs", "activeTab"],
    "version"          : "1.0.0",
    "icons"              :
    {
        "16" : "icons/icon-16.png"
    },
    "browser_action"     : 
    {
        "default_icon"   :
        {
            "16" : "icons/icon-16.png"
        }
    }
}